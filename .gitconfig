[user]
	email = roderik@settlemint.com
	name = Roderik van der Veer
	signingkey = key::ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIA0+bsCoH2OJejgy1f89x6ngW7/sqYWqM949diNIo449 SSH key (roderik)
[core]
	pager = delta
	multiPackIndex = true
	excludesfile = ~/.gitignore_global
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[merge]
	conflictstyle = zdiff3
[diff]
  renames = copies
	colorMoved = plain
	algorithm = histogram
[commit]
	gpgsign = true
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[gpg]
	format = ssh
	program = /usr/local/bin/gpg
[rerere]
	enabled = true
	autoupdate = true
[pull]
	rebase = true
[apply]
  whitespace = fix
[branch]
	sort = -committerdate
  autosetuprebase = always
[push]
  default = simple
  followTags = true
	autoSetupRemote = true
[init]
  defaultBranch = main
[fetch]
	prune = true
	pruneTags = true
	writeCommitGraph = true
[column]
	ui = auto
[tag]
	sort = version:refname
	gpgsign = true
[index]
	sparse = true
[phantom]
	editor = code --reuse-window
	ai = claude
[gitbutler]
	aiModelProvider = openai
[coderabbit]
	machineId = cli/dbdba1f8d387485b9bfbc4df65f29eaa
[git-town]
	github-connector = gh
[rebase]
	updateRefs = true
	autosquash = true
[color]
	ui = auto
[color "branch"]
	current = "#FFC799"
	local = "#A0A0A0"
	remote = "#99FFE4"
[color "diff"]
	meta = "#FFC799" bold
	frag = "#A0A0A0" bold
	old = "#FF8080" bold
	new = "#99FFE4" bold
[color "status"]
	added = "#99FFE4"
	changed = "#FFC799"
	untracked = "#A0A0A0"
[alias]
	pf = push --force-with-lease
